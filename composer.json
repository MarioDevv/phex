  "type": "proyect",
  "keywords": [
    "php",
    "framework"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mario",
      "email": "perezmario.info@email.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Phex\\": "src/",
      "Phex\\Tests\\": "tests/"
    }
